---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for page in collections.all %}
	{%- if not (page.data.sitemap == false) %}
	<url>
		{%- set absoluteUrl %}{{ page.url | htmlBaseUrl(metadata.url) }}{% endset %}
		<loc>{{ absoluteUrl }}</loc>
		{%- if page.lastmod %}
		<lastmod>{{ page.lastmod | htmlDateString }}</lastmod>
		{%- endif %}
		{%- if page.data.sitemap.changeFreq %}
		<changefreq>{{ page.data.sitemap.changeFreq }}</changefreq>
		{%- endif %}
		{%- if page.data.sitemap.priority %}
		<priority>{{ page.data.sitemap.priority }}</priority>
		{%- endif %}
	</url>
	{%- endif %}
{%- endfor %}
</urlset>
